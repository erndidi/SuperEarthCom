<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Super Earth Communications</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    <script src="~/Scripts/validate.min.js"></script>
    <link href="~/Content/bulma.min.css" rel="stylesheet" />
    <link href="~/Content/bulma-divider.min.css" rel="stylesheet" />
    <script src="~/Scripts/bulma-extensions.min.js"></script>

    <script src="~/Scripts/SuperEarthCom.js"></script>

    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <!-- Uses a transparent header that draws on top of the layout's background -->

    <section class="hero" style="align-content:center">
        <!-- Hero head: will stick at the top -->
        <div class="hero-body" style="background-color:transparent">
            <div class="container is-centered">
                @Html.Partial("_Logo")
            </div>



            <div class="is-divider"></div>
        </div>
    </section>

    <!-- Hero content: will be in the middle -->

    <section>
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-2 is-centered" style="padding-left:30px">                    
                    <p><input type="button" class="button"  onclick="SEC.toggleVisibility(this)" id="homeLnk" value="Home" /></p>
                    <br />
                    <p><input type="button"  class="button" onclick="SEC.toggleVisibility(this)" id="aboutLnk" value="About" /></p>


                </div>
                <div class="is-divider-vertical"></div>
                <div class="column is-6"> @RenderBody()</div>
                <div class="is-divider-vertical"></div>
                <div class="column is-4" style="padding-left:30px"> @Html.Partial("_Contact")</div>
            </div>
        </div>
    </section>







    <!-- Hero footer: will stick at the bottom -->
    <section>
        <div class="footer">

            <div class="container is-centered">

                <ul style="text-align:center">
                    <li style="display:inline-block">Owner: Ernest Lipford</li>
                    <li style="display:inline-block; margin-left:20px">Phone: 615 496 3898</li>
                    <li style="display:inline-block; margin-left:20px">Email: superearthcom@gmail.com</li>

                </ul>


            </div>

        </div>



    </section>


    @RenderSection("Scripts", required: false)


</body>
</html>
